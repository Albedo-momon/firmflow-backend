# Server Configuration
PORT=4000
STORAGE_DIR=./storage

# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://firmflow_user:xxxx@localhost:5432/firmflow_dev"
POSTGRES_USER=firmflow_user
POSTGRES_PASSWORD=xxxx

# Security Configuration
ALLOWED_ORIGINS=https://firmflow.in,https://www.firmflow.in,http://localhost:3000
JWT_SECRET=your-jwt-secret-key-here

# Upload Configuration
UPLOAD_MAX_SIZE_BYTES=10485760
UPLOAD_ALLOWED_MIMES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Rate Limiting
RATE_LIMIT_DRIVER=memory
RATE_LIMIT_USER_PER_MINUTE=5
RATE_LIMIT_USER_PER_HOUR=100
USER_MONTHLY_QUOTA_PAGES=1000

# Redis Configuration (optional - falls back to in-memory if not available)
REDIS_URL=redis://localhost:6379

# S3 Configuration (optional)
ENABLE_PRESIGNED_UPLOADS=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=firmflow-uploads
S3_UPLOAD_PREFIX=uploads

# Virus Scanning (optional)
VIRUS_SCAN_ENABLED=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# LLM Configuration
OPENAI_API_KEY=xyz
OPENAI_MODEL=gpt-4o-mini
LLM_PROVIDER=openai
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=2000
LLM_TIMEOUT_MS=60000
DEV_MODE=false